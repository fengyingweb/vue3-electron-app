{
  "name": "vue3-electron-app",
  "main": "electron/main.js",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run serve\"",
    "dev": "chcp 65001 && vite",
    "serve": "nodemon --exec electron . --watch ./ --ext .js,.html,.scss,.vue,.ts,.css,.less",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.4",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "element-plus": "^2.4.4",
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "vue": "^3.2.39",
    "vue-router": "^4.2.5",
    "web-storage-cache": "^1.1.1"
  },
  "devDependencies": {
    "@iconify-json/ep": "^1.1.8",
    "@vitejs/plugin-vue": "^2.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "less": "3.9.0",
    "nodemon": "^3.0.2",
    "sass": "^1.69.7",
    "sass-loader": "^13.3.3",
    "tree-kill": "^1.2.2",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "0.14.14",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^2.8.0",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.my-website.vue3-electron-app",
    "asar": true,
    "productName": "vue3-electron-app",
    "copyright": "Copyright Â© 2024 fengying",
    "mac": {
      "category": "public.app-category.utilities",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./public/icon.ico",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "installerIcon": "./public/icon.ico",
      "uninstallerIcon": "./public/icon.ico",
      "installerHeaderIcon": "./public/icon.ico",
      "shortcutName": "vue3-electron-app"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/"
    }
  }
}
